{
  "name": "wellcart/module-catalog",
  "description": "Product management & categorization system for WellCart Platform",
  "license": "BSD-3-Clause",
  "homepage": "http://wellcart.org/",
  "type": "library",
  "authors": [
    {
      "name": "Dima Denisenko",
      "email": "dima@wellcart.org",
      "role": "Developer"
    },
    {
      "name": "WellCart Catalog Module Contributors",
      "homepage": "https://github.com/wellcart/module-catalog/contributors"
    }
  ],
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "process-timeout": 4000,
    "platform": {
      "ext-mongo": "1.6"
    },
    "preferred-install": "dist",
    "component-dir": "tests/public/assets/lib",
    "component-baseurl": "/assets/lib"
  },
  "scripts": {
    "post-install-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "post-update-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "coveralls": "coveralls",
    "cs": "phpcs",
    "cs-fix": "phpcbf"
  },
  "extra": {
    "wellcart": {
      "type": "module",
      "name": "WellCart\\Catalog",
      "context": {
        "common": {
          "name": "common",
          "extends": false,
          "require": {
            "-72700": "WellCart\\Catalog"
          }
        }
      }
    },
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1.0",
    "wellcart/component-base": "0.1.*",
    "wellcart/component-backend": "0.1.*",
    "wellcart/component-setup": "0.1.*",
    "wellcart/module-directory": "0.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7.0",
    
    "edgedesign/phpqa": "^1.12.1",
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "jakub-onderka/php-console-highlighter": "^0.3.2",
    "phpstan/phpstan": "^0.7",
    "satooshi/php-coveralls": "~1.0"
  },
  "suggest": {
    "ext-xdebug": "Extension which provides debugging and profiling capabilities, make possible code coverage support."
  },
  "autoload": {
    "psr-4": {
      "WellCart\\Catalog\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  }
}