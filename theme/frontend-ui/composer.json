{
  "name": "wellcart/theme-frontend-ui",
  "description": "WellCart Frontend Foundation Design Theme",
  "license": "BSD-3-Clause",
  "homepage": "http://wellcart.org/",
  "authors": [
    {
      "name": "Dima Denisenko",
      "email": "dima@wellcart.org",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.0.0",
    "wellcart/component-library": "0.1.*",
    "wellcart/component-base": "0.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5.0",
    "phpmd/phpmd": "2.*",
    "sebastian/phpcpd": "2.*",
    "pdepend/pdepend": "2.*",
    "phploc/phploc": "3.*",
    "squizlabs/php_codesniffer": "^2.6.1",
    "satooshi/php-coveralls": "~1.0"
  },
  "suggest": {
    "ext-xdebug": "Extension which provides debugging and profiling capabilities, make possible code coverage support."
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "preferred-install": "dist",
    "platform": {
      "ext-mongo": "1.6"
    },
    "component-dir": "tests/public/assets/lib",
    "component-baseurl": "/assets/lib"
  },
  "scripts": {
    "post-install-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "post-update-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "test": "codecept run",
    "coveralls": "coveralls",
    "cs": "phpcs",
    "cs-fix": "phpcbf"
  },
  "extra": {
    "wellcart": {
      "type": "theme",
      "name": "WellCart\\Theme\\FrontendUi",
      "context": {
        "common": {
          "require": {
            "-90000": "WellCart\\Theme\\FrontendUi"
          }
        },
        "frontend": {
          "require": {}
        },
        "backend": {
          "require": {}
        },
        "setup": {
          "require": {}
        }
      }
    },
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "./src/Module.php",
      "tests/unit/"
    ]
  }
}