{
  "name": "wellcart/theme-backend-ui",
  "description": "WellCart Backend UI Foundation",
  "version": "0.1.0",
  "license": "BSD-3-Clause",
  "homepage": "http://wellcart.org/",
  "authors": [
    {
      "name": "Dima Denisenko",
      "email": "dima@wellcart.org",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.0.0",
    "wellcart/component-library": "0.1.*",
    "wellcart/theme-frontend-ui": "0.1.*",
    "wellcart/component-base": "0.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7.0",
    "codeception/codeception": "2.2.*",
    "edgedesign/phpqa": "^1.9.1",
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "jakub-onderka/php-console-highlighter": "^0.3.2",
    "phpstan/phpstan": "^0.6.3",
    "satooshi/php-coveralls": "~1.0"
  },
  "suggest": {
    "ext-xdebug": "Extension which provides debugging and profiling capabilities, make possible code coverage support."
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "preferred-install": "dist",
    "platform": {
      "ext-mongo": "1.6"
    },
    "component-dir": "tests/public/assets/lib",
    "component-baseurl": "/assets/lib"
  },
  "scripts": {
    "post-install-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "post-update-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "coveralls": "coveralls",
    "cs": "phpcs",
    "cs-fix": "phpcbf"
  },
  "extra": {
    "wellcart": {
      "type": "theme",
      "name": "WellCart\\Theme\\BackendUi",
      "context": {
        "common": {
          "require": {
            "-90000": "WellCart\\Theme\\FrontendUi",
            "-80400": "WellCart\\Theme\\BackendUi"
          }
        },
        "frontend": {
          "require": {}
        },
        "backend": {
          "require": {
          }
        },
        "setup": {
          "require": {}
        }
      }
    },
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "./src/Module.php",
      "tests/unit/"
    ]
  }
}