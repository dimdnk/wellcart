{
  "name": "wellcart/component-filter",
  "description": "Provides a set of commonly needed data filters",
  "license": "BSD-3-Clause",
  "homepage": "http://wellcart.org/",
  "type": "library",
  "authors": [
    {
      "name": "Dima Denisenko",
      "email": "dima@wellcart.org",
      "role": "Developer"
    }
  ],
  "config": {
    "bin-dir": "bin/",
    "process-timeout": 4000,
    "sort-packages": true,
    "preferred-install": "dist",
    "platform": {
      "ext-mongo": "1.6"
    }
  },
  "extra": {
    "wellcart": {
      "type": "component",
      "name": "WellCart\\Filter"
    },
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.0.0",
    "zendframework/zend-filter": "2.7.*",
    "soflomo/purifier": "1.0.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6.0",
    "codeception/codeception": "2.2.*",
    "phpmd/phpmd": "2.*",
    "sebastian/phpcpd": "2.*",
    "pdepend/pdepend": "2.*",
    "phploc/phploc": "3.*",
    "squizlabs/php_codesniffer": "^2.6.1",
    "satooshi/php-coveralls": "~1.0"
  },
  "suggest": {
    "ext-xdebug": "Extension which provides debugging and profiling capabilities, make possible code coverage support."
  },
  "autoload": {
    "psr-4": {
      "WellCart\\Filter\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
    ]
  }
}