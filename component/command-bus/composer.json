{
  "name": "wellcart/component-command-bus",
  "description": "SimpleBus library integration into Zend Framework",
  "version": "0.1.0",
  "license": "BSD-3-Clause",
  "homepage": "http://wellcart.org/",
  "type": "library",
  "authors": [
    {
      "name": "Dima Denisenko",
      "email": "dima@wellcart.org",
      "role": "Developer"
    },
    {
      "name": "Nicolas Eeckeloo",
      "email": "neeckeloo@gmail.com",
      "role": "Developer"
    }
  ],
  "config": {
    "bin-dir": "bin/",
    "process-timeout": 4000,
    "sort-packages": true,
    "preferred-install": "dist",
    "component-dir": "tests/public/assets/lib",
    "component-baseurl": "/assets/lib",
    "platform": {
      "ext-mongo": "1.6"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "post-update-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "coveralls": "coveralls",
    "cs": "phpcs",
    "cs-fix": "phpcbf"
  },
  "extra": {
    "wellcart": {
      "type": "component",
      "name": "WellCart\\CommandBus"
    },
    "zf": {
      "component": "WellCart\\CommandBus"
    },
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1.0",
    "simple-bus/asynchronous": "2.*",
    "wellcart/component-base": "0.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7.23",
    "edgedesign/phpqa": "^1.15",
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "jakub-onderka/php-console-highlighter": "^0.3.2",
    "phpstan/phpstan": "^0.7",
    "satooshi/php-coveralls": "~1.0"
  },
  "suggest": {
    "ext-xdebug": "Extension which provides debugging and profiling capabilities, make possible code coverage support."
  },
  "autoload": {
    "psr-4": {
      "WellCart\\CommandBus\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  }
}
