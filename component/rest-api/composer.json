{
  "name": "wellcart/component-rest-api",
  "description": "The framework based on Apigility for the application to expose REST web services.",
  "license": "BSD-3-Clause",
  "homepage": "http://wellcart.org/",
  "type": "library",
  "authors": [
    {
      "name": "Dima Denisenko",
      "email": "dima@wellcart.org",
      "role": "Developer"
    },
    {
      "name": "WellCart Api Contributors",
      "homepage": "https://github.com/wellcart/component-rest-api/contributors"
    }
  ],
  "config": {
    "bin-dir": "bin/",
    "process-timeout": 4000,
    "sort-packages": true,
    "platform": {
      "ext-mongo": "1.6"
    },
    "preferred-install": "dist",
    "component-dir": "tests/public/assets/lib",
    "component-baseurl": "/assets/lib"
  },
  "scripts": {
    "post-install-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "post-update-cmd": [
      "WellCart\\Setup\\Composer\\ScriptHandler::createProjectDirectories",
      "WellCart\\Setup\\Composer\\ScriptHandler::setPermissions"
    ],
    "coveralls": "coveralls",
    "cs": "phpcs",
    "cs-fix": "phpcbf"
  },
  "extra": {
    "wellcart": {
      "type": "component",
      "name": "WellCart\\RestApi",
      "context": {
        "common": {
          "name": "common",
          "require": {
            "-72750": "WellCart\\RestApi"
          }
        },
        "api": {
          "name": "api",
          "extends": "common",
          "require": {
            "-72778": "ZF\\Configuration",
            "-72777": "ZF\\Apigility",
            "-72776": "ZF\\Apigility\\Documentation",
            "-72775": "ZF\\Apigility\\Documentation\\Swagger",
            "-72774": "ZF\\Apigility\\Provider",
            "-72773": "ZF\\ApiProblem",
            "-72772": "ZF\\MvcAuth",
            "-72771": "ZF\\OAuth2",
            "-72770": "ZF\\Hal",
            "-72769": "ZF\\ContentNegotiation",
            "-72768": "ZF\\ContentValidation",
            "-72767": "ZF\\Rest",
            "-72765": "ZF\\Versioning",
            "-72764": "ZF\\Doctrine\\QueryBuilder",
            "-72760": "Phpro\\DoctrineHydrationModule",
            "-72759": "ZF\\Apigility\\Doctrine\\Server",
            "-72758": "ZF\\OAuth2\\Doctrine",
            "-72757": "ZF\\OAuth2\\Doctrine\\Console",
            "-72750": "WellCart\\RestApi"
          }
        }
      }
    },
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.0.0",
    "wellcart/component-base": "0.1.*",
    "wellcart/component-setup": "0.1.*",
    "wellcart/component-user": "0.1.*",
    "wellcart/component-admin": "0.1.*",
    "zfcampus/zf-apigility": "1.*@dev",
    "zfcampus/zf-apigility-documentation": "~1.0-dev",
    "zfcampus/zf-apigility-documentation-swagger": "~1.0-dev",
    "zfcampus/zf-api-problem": "1.*@dev",
    "zfcampus/zf-apigility-doctrine": "^2.0.5",
    "zfcampus/zf-content-validation": "^1.3.2",
    "zfcampus/zf-doctrine-querybuilder": "1.*@dev",
    "api-skeletons/zf-oauth2-doctrine": "1.0.5",
    "api-skeletons/zf-oauth2-doctrine-console": "1.2.1",
    "zfcampus/zf-deploy": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5.0",
    "phpmd/phpmd": "2.*",
    "sebastian/phpcpd": "2.*",
    "pdepend/pdepend": "2.*",
    "phploc/phploc": "3.*",
    "squizlabs/php_codesniffer": "^2.6.1",
    "satooshi/php-coveralls": "~1.0"
  },
  "suggest": {
    "ext-xdebug": "Extension which provides debugging and profiling capabilities, make possible code coverage support."
  },
  "autoload": {
    "psr-4": {
      "WellCart\\RestApi\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/unit/"
    ]
  }
}
