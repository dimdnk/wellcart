<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi="http://www.w3.org/2001/XMLSchema-instance"
                  schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="WellCart\RestApi\Entity\OAuth2\Client" table="oauth2_clients"
            repository-class="WellCart\RestApi\Repository\OAuth2\Clients">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="clientId" column="client_id" type="string" nullable="true"/>
        <field name="secret" type="string" nullable="true"/>
        <field name="redirectUri" column="redirect_uri" type="text" nullable="true"/>
        <field name="grantType" column="grant_type" type="array" nullable="true"/>
        <one-to-many field="accessToken" target-entity="WellCart\RestApi\Entity\OAuth2\AccessToken"
                     mapped-by="client"/>
        <one-to-many field="refreshToken" target-entity="WellCart\RestApi\Entity\OAuth2\RefreshToken"
                     mapped-by="client"/>
        <one-to-many field="authorizationCode"
                     target-entity="WellCart\RestApi\Entity\OAuth2\AuthorizationCode"
                     mapped-by="client"/>
        <one-to-many field="jwt" target-entity="WellCart\RestApi\Entity\OAuth2\Jwt" mapped-by="client"/>
        <one-to-many field="jti" target-entity="WellCart\RestApi\Entity\OAuth2\Jti" mapped-by="client"/>
        <one-to-one field="publicKey" target-entity="WellCart\RestApi\Entity\OAuth2\PublicKey"
                    mapped-by="client"/>
        <many-to-many field="scope" target-entity="WellCart\RestApi\Entity\OAuth2\Scope" mapped-by="client"/>
        <many-to-one field="user" target-entity="WellCart\User\Entity\User" inversed-by="client">
            <join-columns>
                <join-column name="user_id" referenced-column-name="user_id" nullable="true" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
