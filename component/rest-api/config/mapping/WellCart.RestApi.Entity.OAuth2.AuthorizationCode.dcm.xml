<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi="http://www.w3.org/2001/XMLSchema-instance"
                  schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="WellCart\RestApi\Entity\OAuth2\AuthorizationCode" table="oauth2_authorization_codes">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="authorizationCode" column="authorization_code" type="string" nullable="true"/>
        <field name="redirectUri" column="redirect_uri" type="text" nullable="true"/>
        <field name="expires" type="datetime" nullable="true"/>
        <field name="idToken" column="id_token" type="text" nullable="true"/>
        <many-to-one field="client" target-entity="WellCart\RestApi\Entity\OAuth2\Client"
                     inversed-by="authorizationCode">
            <join-columns>
                <join-column name="client_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="user" target-entity="WellCart\User\Entity\User" inversed-by="authorizationCode">
            <join-columns>
                <join-column name="user_id" referenced-column-name="user_id" nullable="true" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-many field="scope" target-entity="WellCart\RestApi\Entity\OAuth2\Scope"
                      mapped-by="authorizationCode"/>
    </entity>
</doctrine-mapping>
